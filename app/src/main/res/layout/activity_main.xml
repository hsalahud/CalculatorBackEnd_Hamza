<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/calculator" android:background="#00070707">
    <Button
            android:text="AC"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ac" android:textSize="50sp"
            android:textAlignment="center"
            android:background="#C8E2E6"
            app:layout_constraintTop_toBottomOf="@+id/one"
            app:layout_constraintStart_toEndOf="@+id/period" android:onClick="clickReset"/>
    <Button
            android:text="."
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/period" android:textSize="50sp"
            android:textAlignment="center"
            android:background="#C8E2E6"
            app:layout_constraintTop_toBottomOf="@+id/two"
            app:layout_constraintStart_toEndOf="@+id/zero" android:onClick="clickDecimal"/>
    <Button
            android:text="0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/zero" android:textSize="50sp"
            android:textAlignment="center"
            android:background="#C8E2E6"
            app:layout_constraintTop_toBottomOf="@+id/three"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:onClick="clickNum"/>
    <Button
            android:text="1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/one" android:textSize="50sp"
            android:textAlignment="center"
            android:background="#C8E2E6"
            android:onClick="clickNum"
            app:layout_constraintTop_toBottomOf="@+id/six" app:layout_constraintStart_toEndOf="@+id/two"
    />
    <Button
            android:text="2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/two" android:textSize="50sp"
            android:textAlignment="center"
            android:background="#C8E2E6"
            app:layout_constraintTop_toBottomOf="@+id/five" app:layout_constraintStart_toEndOf="@+id/three"
            android:onClick="clickNum"/>
    <Button
            android:text="3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/three" android:textSize="50sp"
            android:textAlignment="center"
            android:background="#C8E2E6"
            app:layout_constraintTop_toBottomOf="@+id/four"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:onClick="clickNum"/>
    <Button
            android:text="6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/six" android:textSize="50sp"
            android:textAlignment="center"
            android:background="#C8E2E6"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="104dp" app:layout_constraintTop_toBottomOf="@+id/nine"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toStartOf="@+id/equals"
            app:layout_constraintStart_toEndOf="@+id/five" app:layout_constraintHorizontal_bias="0.0"
            android:onClick="clickNum"/>
    <Button
            android:text="5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/five" android:textSize="50sp"
            android:textAlignment="center"
            android:background="#C8E2E6"
            app:layout_constraintTop_toBottomOf="@+id/nine" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/four"
            app:layout_constraintHorizontal_bias="0.0" android:onClick="clickNum"/>
    <Button
            android:text="4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/four" android:textSize="50sp"
            android:textAlignment="center"
            android:background="#C8E2E6"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/eight" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.025"
            android:onClick="clickNum"/>
    <Button
            android:text="9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/nine" android:textSize="50sp"
            android:textAlignment="center"
            android:background="#C8E2E6"
            app:layout_constraintTop_toBottomOf="@+id/multiply"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="108dp"
            app:layout_constraintStart_toEndOf="@+id/eight" android:layout_marginStart="6dp"
            android:onClick="clickNum"/>
    <Button
            android:text="8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/eight" android:textSize="50sp"
            android:textAlignment="center"
            android:background="#C8E2E6"
            app:layout_constraintTop_toBottomOf="@+id/minus" app:layout_constraintBottom_toTopOf="@+id/five"
            app:layout_constraintStart_toEndOf="@+id/seven"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent" android:onClick="clickNum"/>
    <Button
            android:text="7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/seven" android:textSize="50sp"
            android:textAlignment="center"
            android:background="#C8E2E6"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/plus"
            app:layout_constraintBottom_toTopOf="@+id/four"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.022" android:onClick="clickNum"/>
    <Button
            android:text="-"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/minus" android:textSize="50sp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/display" app:layout_constraintEnd_toStartOf="@+id/multiply"
            android:onClick="clickOperation"/>
    <Button
            android:text="+"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/plus" android:textSize="50sp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/display"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/minus"
            app:layout_constraintHorizontal_bias="1.0" android:onClick="clickOperation"/>
    <Button
            android:text="รท"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/divide" android:textSize="40sp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/display" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp" android:onClick="clickOperation"/>
    <Button
            android:text="x"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/multiply" android:textSize="40sp"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/divide"
            app:layout_constraintTop_toBottomOf="@+id/display" android:onClick="clickOperation"/>
    <TextView
            android:text="0"
            android:layout_width="418dp"
            android:layout_height="107dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2" android:textAlignment="textEnd"
            android:backgroundTint="#004B2C2C"
            android:background="@android:color/black"
            android:backgroundTintMode="src_over" android:textColor="@android:color/white"
            android:paddingVertical="20dp" android:paddingTop="25dp" android:paddingHorizontal="10dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" android:id="@+id/display"/>
    <Button
            android:text="="
            android:layout_width="93dp"
            android:layout_height="409dp"
            android:id="@+id/equals" android:textSize="50dp"
            android:background="#E0851E"
            app:layout_constraintTop_toBottomOf="@+id/divide"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginEnd="4dp" app:layout_constraintStart_toEndOf="@+id/ac"
            app:layout_constraintHorizontal_bias="0.909" android:onClick="clickEqualsAsync"/>
</androidx.constraintlayout.widget.ConstraintLayout>